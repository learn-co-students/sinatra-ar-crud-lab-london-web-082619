<form method="post" action='/articles/<%= @article.id %>'>
    <p>Article title: <input type='text' name="title" value="<%= @article.title %>"></p> 
    <p>Article content: <input type='text' name="content" value="<%= @article.content%>"></p>
    <input type="submit" value="submit">
    <% if @article.id %>
        <input type="hidden" name="_method" value="patch">
    <% end %>
</form>